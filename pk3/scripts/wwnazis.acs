#library "WWNAZIS"
#include "zcommon.acs"

SCRIPT "WWNaziTaunt" (int tauntType)
{
	delay(20);
	if(random(1,5) == 5) {
	if(tauntType == 1) { PlaySound(0, "player/taunt", CHAN_VOICE, 1.0); } // argument 1: taunt from firing
	if(tauntType == 2) { PlaySound(0, "player/reload", CHAN_VOICE, 1.0); } // 2: taunt from reloading
	if(tauntType == 3) { PlaySound(0, "player/grenadecall", CHAN_VOICE, 1.0); } // 3: throwing a grenade
	}
}